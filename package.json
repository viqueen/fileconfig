{
  "name": "fileconfig",
  "version": "3.0.0",
  "description": "json and yml file configurations",
  "main": "lib/fileconfig.js",
  "preferGlobal": true,
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha --harmony_proxies",
    "test:watch": "./node_modules/mocha/bin/mocha --harmony_proxies --watch",
    "dev": "./node_modules/.bin/nodemon -e js,json,yml ./node_modules/mocha/bin/mocha --harmony_proxies",
    "coverage": "./node_modules/.bin/istanbul cover _mocha -- --recursive && ./node_modules/.bin/istanbul check-coverage",
    "lint" : "./node_modules/.bin/eslint . --ext .js --debug"
  },
  "bin": {
    "harmonious": "bin/harmonious"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viqueen/fileconfig.git"
  },
  "keywords": [
    "json",
    "yml",
    "config"
  ],
  "author": "Hasnae Rehioui <hrehioui@atlassian.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/viqueen/fileconfig/issues"
  },
  "homepage": "https://github.com/viqueen/fileconfig#readme",
  "devDependencies": {
    "eslint": "^1.10.3",
    "istanbul": "^0.4.2",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1"
  },
  "dependencies": {
    "harmony-reflect": "^1.4.2",
    "jsonfile": "^2.2.3",
    "underscore": "^1.8.3",
    "yamljs": "^0.2.4"
  }
}
